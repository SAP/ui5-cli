{
	"name": "@ui5/cli",
	"version": "0.1.0",
	"description": "UI5 Build and Development Tooling - CLI",
	"author": "SAP SE (https://www.sap.com)",
	"license": "Apache-2.0",
	"keywords": [
		"openui5",
		"sapui5",
		"ui5",
		"build",
		"development",
		"tool"
	],
	"bin": {
		"ui5": "./bin/ui5.js"
	},
	"main": "index.js",
	"engines": {
		"node": ">= 8.3",
		"npm": ">= 5"
	},
	"scripts": {
		"test": "npm run lint && npm run jsdoc-generate && npm run coverage",
		"lint": "eslint ./",
		"unit": "rimraf test/tmp && ava",
		"unit-watch": "rimraf test/tmp && ava --watch",
		"unit-nyan": "npm run unit -- --tap | tnyan",
		"unit-debug": "rimraf test/tmp && cross-env DEBUG=*,-babel,-ava ava",
		"unit-inspect": "cross-env DEBUG=*,-babel,-ava node --inspect-brk node_modules/ava/profile.js",
		"coverage": "nyc npm run unit",
		"jsdoc": "npm run jsdoc-generate && opn jsdocs/index.html",
		"jsdoc-generate": "node_modules/.bin/jsdoc -c ./jsdoc.json ./lib/ || (echo 'Error during JSDoc generation! Check log.' && exit 1)",
		"preversion": "npm test",
		"version": "git-chglog --next-tag v$npm_package_version -o CHANGELOG.md && git add CHANGELOG.md",
		"postversion": "git push --follow-tags",
		"release-note": "git-chglog -c .chglog/release-config.yml v$npm_package_version",
		"report-coveralls": "nyc report --reporter=text-lcov | coveralls"
	},
	"ava": {
		"files": [
			"test/lib/**/*.js"
		],
		"source": [
			"lib/**/*.js",
			"test/lib/**/*.js"
		]
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text",
			"text-summary"
		],
		"exclude": [
			"docs/**",
			"jsdocs/**",
			"coverage/**",
			"test/**"
		],
		"check-coverage": true,
		"lines": 20,
		"statements": 25,
		"functions": 23,
		"branches": 20,
		"watermarks": {
			"lines": [
				20,
				90
			],
			"functions": [
				23,
				90
			],
			"branches": [
				20,
				70
			],
			"statements": [
				25,
				90
			]
		},
		"cache": true,
		"all": true
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:SAP/ui5-cli.git"
	},
	"dependencies": {
		"@ui5/builder": "^0.1.0",
		"@ui5/logger": "^0.1.0",
		"@ui5/project": "^0.1.0",
		"@ui5/server": "^0.1.0",
		"js-yaml": "^3.10.0",
		"opn": "^5.1.0",
		"supports-color": "^5.1.0",
		"treeify": "^1.0.1",
		"yargs": "^11.0.0"
	},
	"devDependencies": {
		"adm-zip": "^0.4.7",
		"ava": "^0.25.0",
		"chai": "^4.1.2",
		"chai-fs": "^2.0.0",
		"coveralls": "^3.0.1",
		"cross-env": "^5.1.1",
		"docdash": "^0.4.0",
		"eslint": "^5.0.1",
		"eslint-config-google": "^0.9.1",
		"jsdoc": "^3.5.5",
		"nyc": "^11.8.0",
		"opn-cli": "^3.1.0",
		"recursive-readdir": "^2.1.1",
		"rimraf": "^2.6.2",
		"supertest": "^3.0.0",
		"tap-nyan": "^1.1.0"
	}
}
